<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="Account.RegisterActivity">

    <ImageButton
        android:id="@+id/ibReg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_circle_left_24"
        android:backgroundTint="@color/white"
        />
    <ImageView
        android:layout_width="216dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo_lam"
        />
    <TextView
        android:layout_width="110dp"
        android:layout_height="29dp"
        android:text="ĐĂNG KÝ"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <EditText
            android:id="@+id/edUserNameRe"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:hint="Tên đăng nhập"
            android:inputType="text"
            android:background="@drawable/bogoc2"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:textSize="25dp"
            android:drawablePadding="50dp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:hint="Mật khẩu"
            app:passwordToggleTint="@color/blue"
            android:background="@drawable/bogoc2"
            android:drawableLeft="@drawable/baseline_vpn_key_24"
            android:drawablePadding="50dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"/>
        <EditText
            android:id="@+id/edRePassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:background="@drawable/bogoc2"
            android:hint="Xác nhận mật khẩu"
            android:drawableLeft="@drawable/baseline_vpn_key_24"
            android:drawablePadding="50dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:inputType="textPassword"
            android:selectAllOnFocus="true"
            />
        <EditText
            android:id="@+id/edEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:background="@drawable/bogoc2"
            android:hint="Email"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="50dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:selectAllOnFocus="true" />
        <EditText
            android:id="@+id/edPhone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:hint="Số điện thoại"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="50dp"
            android:textSize="25dp"
            android:background="@drawable/bogoc2"
            android:textStyle="bold"
            android:inputType="number|phone"
            android:selectAllOnFocus="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/rectangle_123"
                />
            <Button
                android:id="@+id/btAvatar"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:backgroundTint="#414F44"
                android:layout_marginLeft="80dp"
                android:text="Chọn avatar" />
        </LinearLayout>
        <Button
            android:id="@+id/btRegister"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:backgroundTint="#414F44"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Đăng ký"
            />
    </LinearLayout>
</LinearLayout>