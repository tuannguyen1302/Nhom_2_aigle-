<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/payment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#414F44">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#414F44">
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_marginTop="90dp"
        android:layout_gravity="center"
        android:background="@drawable/bogoc2">

        <!-- căn lề đều android:justificationMode="inter_word" -->
        <TextView
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_gravity="center"
            android:justificationMode="inter_word"
            android:textColor="@color/black"
            android:text="Bạn đã đặt hàng thành công, sản phẩm sẽ sớm được giao đến ban."
            android:textSize="28sp"/>

        <TextView
            android:layout_width="317dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:justificationMode="inter_word"
            android:textColor="@color/black"
            android:text="Shop xin chân thành cảm ơn bạn đã ủng hộ. Chúc bạn có một ngày vui vẻ ^.^ !!!"
            android:textSize="28sp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#414F44"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:text="Quay lại trang chủ"
            android:id="@+id/complete"/>

    </LinearLayout>

</LinearLayout>