<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/ib_Back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:backgroundTint="@color/white"
            android:layout_gravity="left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:hint="QUẢN LÝ MÃ GIẢM GIÁ"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="27sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã giảm giá:"
        android:textColor="#4BA8EB"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/edit_text_voucher_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã giảm giá"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mức giá giảm:"
        android:textColor="#4BA8EB"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/edit_text_voucher_discount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mức giảm giá"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID sản phẩm:"
        android:textColor="#4BA8EB"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/edit_text_voucher_product_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ID sản phẩm"
        android:inputType="number"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày bắt đầu:"
        android:textColor="#4BA8EB"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/edit_text_voucher_start_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngày bắt đầu"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:inputType="text"
        android:maxLines="1"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày kết thúc:"
        android:textColor="#4BA8EB"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"/>

    <EditText
        android:id="@+id/edit_text_voucher_end_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ngày kết thúc"
        android:inputType="text"
        android:textSize="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:singleLine="true" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp">

        <Button
            android:id="@+id/btn_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Xem tất cả"
            android:backgroundTint="#4BA8EB"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_add_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            android:text="Thêm mã giảm giá"
            android:backgroundTint="#4BA8EB"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>