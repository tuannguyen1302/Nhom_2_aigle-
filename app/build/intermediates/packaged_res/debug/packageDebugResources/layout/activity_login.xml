<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="Account.LoginActivity"
    >

    <ImageView
        android:layout_width="216dp"
        android:layout_height="53dp"
        android:layout_gravity="center"
        android:layout_marginTop="108dp"
        android:src="@drawable/logo_lam"
        />
    <TextView
        android:layout_width="144dp"
        android:layout_height="29dp"
        android:text="ĐĂNG NHẬP"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên đăng nhập:"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="24sp"/>
        <EditText
            android:id="@+id/edUserName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:padding="10dp"
            android:drawablePadding="16dp"
            android:hint="Nhập tên đăng nhập"
            android:drawableLeft="@drawable/baseline_account_circle_24"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu:"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/edPass"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="32dp"
            android:hint="Nhập mật khẩu"
            android:padding="10dp"
            android:drawableLeft="@drawable/baseline_vpn_key_24"
            android:drawablePadding="16dp"
            android:inputType="textPassword"
            android:textSize="25sp"
            />



        <Button
            android:id="@+id/btLogin"
            android:layout_width="372dp"
            android:layout_height="48dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="ĐĂNG NHẬP"
            android:textAllCaps="false"
            android:backgroundTint="#414F44"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/btregisterss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Bạn không có tài khoản? Đăng ký ngay!"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold" />


    </LinearLayout>
</LinearLayout>